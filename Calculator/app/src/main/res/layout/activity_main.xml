<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="40dp"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#000"
        android:background="#BA09A6F0"
        android:layout_weight="1"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2F18CAE9"
        android:weightSum="2"
        android:layout_weight="2"
        >

        <TextView
            android:id="@+id/editTextID1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_weight="1"
            >
        </TextView>
        <TextView
            android:id="@+id/editTextID2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_weight="1"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#8143A047"
        android:weightSum="4"
        android:padding="5dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/buttonIDadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>
        <Button
            android:id="@+id/buttonIDsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>

        <Button
            android:id="@+id/buttonIDmul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>

        <Button
            android:id="@+id/buttonIDdiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#8143A047"
        android:weightSum="2"
        android:padding="5dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/buttonIDback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>
        <Button
            android:id="@+id/buttonIDclr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clr"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B0C0CA33"
        android:weightSum="3"
        android:padding="5dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/buttonIDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>
        <Button
            android:id="@+id/buttonIDtwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>

        <Button
            android:id="@+id/buttonIDthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B0C0CA33"
        android:weightSum="3"
        android:padding="5dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/buttonIDfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>
        <Button
            android:id="@+id/buttonIDfive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>

        <Button
            android:id="@+id/buttonIDsix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B0C0CA33"
        android:weightSum="3"
        android:padding="5dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/buttonIDseven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>
        <Button
            android:id="@+id/buttonIDeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>

        <Button
            android:id="@+id/buttonIDnine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B0C0CA33"
        android:weightSum="3"
        android:padding="5dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/buttonIDdot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="1"
            >
        </Button>
        <Button
            android:id="@+id/buttonIDequ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_weight="2"
            >
        </Button>

    </LinearLayout>




</LinearLayout>